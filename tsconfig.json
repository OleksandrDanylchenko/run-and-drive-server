{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["src/*"],
      "@database/*": ["src/database/*"],
      "@config/*": ["src/config/*"],
      "@common/*": ["src/common/*"],
      "@utils/*": ["src/utils/*"],
      "@auth/*": ["src/modules/auth/*"],
      "@engineers/*": ["src/modules/engineers/*"],
      "@emitters/*": ["src/modules/emitters/*"],
      "@cars/*": ["src/modules/cars/*"]
    }
  }
}
