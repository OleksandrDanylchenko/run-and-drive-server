{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["src/*"],
      "@database/*": ["src/database/*"],
      "@config/*": ["src/config/*"],
      "@auth/*": ["src/auth/*"],
      "@common/*": ["src/common/*"]
    }
  }
}
